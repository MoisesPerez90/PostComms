<header class="bg-dark-subtle">

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link text-success" aria-current="page" href="http://localhost:3001/wall">Home</a>
            </li>


            {{#if loggedIn}}
            <li class="nav-item">
                <a class="nav-link text-success" aria-current="page" href="http://localhost:3001/user">Dashboard</a>
            </li>
            <li class="nav-item">
                <button id="logout" class="nav-link text-success">Logout</button>
                <script src="./js/logout.js"></script>
            </li>
            {{else}}
            <li class="nav-item">
                <a class="nav-link active text-success" href="/login">Login</a>
            </li>
            {{/if}}
        </ul>
        <nav class="navbar">
            <div class="container-fluid ">
                <h1> <span class="badge text-bg-success">The Tech Blog</span></h1>
            </div>
        </nav>
    </header>

    <div class="container text-center">
        <div class="row justify-content-around success-border-subtle">
            <div class="col-4 card border-success mt-5">
                <form class="form login-form">
                    <h2 class="page-title">Login</h2>
                    <div class="col">
                        <label for="email-login" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email-login">
                    </div>
                    <div class="col">
                        <label for="password.login" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password.login">
                    </div>
            
                    <div class="col-12 mt-3 login-form">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </form>
            </div>

            <div class="col-4 card border-success mt-5">
                <form class="form signup-form">
                    <h2 class="page-title">Signup</h2>
                    <div class="col">
                        <label for="username-signup" class="form-label">Username</label>
                        <input type="username" class="form-control" id="username-signup">
                    </div>
                    <div class="col">
                        <label for="email-signup" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email-signup">
                    </div>
                    <div class="col">
                        <label for="password-signup" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password-signup">
                    </div>
            
                    <div class="col-12 mt-2 mb-3">
                        <button type="submit" class="btn btn-primary signup-form">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
        <script src="./js/login.js"></script>
    </div>
    

</header>
