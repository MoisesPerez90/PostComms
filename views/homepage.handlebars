<header class="bg-dark-subtle">
    <div class="container-fluid">
        <ul class="nav nav-tabs d-flex justify-content-between">
            <div class="row">
                <li class="nav-item col p-0">
                    <a class="nav-link active text-success" aria-current="page" href="http://localhost:3001/wall">Home</a>
                </li>

                {{#if loggedIn}}
                <li class="nav-item col p-0">
                    <a class="nav-link text-success" aria-current="page" href="http://localhost:3001/user/{{id}}">Dashboard</a>
                </li>
                <li class="nav-item col p-0">
                    <button id="logout" class="nav-link text-success">Logout</button>
                    <script src="../js/logout.js"></script>
                </li>
                {{else}}
                <li class="nav-item col p-0">
                    <a class="nav-link text-success" href="/login">Login</a>
                </li>
                {{/if}}
            </div>

            <div class="row">
                {{#if loggedIn}}
                <li class="nav-item">
                    <a class="nav-link active text-success" aria-current="page">Username: {{username}}</a> 
                </li>
                {{/if}}
            </div>
        </ul>
    </div>
    <nav class="navbar">
        <div class="container-fluid ">
            <h1> <span class="badge text-bg-success">The Tech Blog</span></h1>
        </div>
    </nav>
</header>

<body>
    {{#each posts as |post|}}
    {{> wall-details}}
    {{/each}}

    <script src="../js/commentUtils.js"></script>
</body>
    
